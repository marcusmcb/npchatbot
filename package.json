{
	"name": "npchatbot",
	"version": "1.0.2",
	"description": "!np (now playing) Twitch Chat Bot and command built with TMI.js",
	"main": "./electron-main.js",
	"scripts": {
		"start": "BROWSER=none react-scripts start",
		"start-client": "npm start --prefix client",
		"start-electron": "electron .",
		"dev": "concurrently --kill-others \"npm run start-client\" \"npm run start-electron\"",
		"build:react": "cd client && npm run build && node ../scripts/utils/fix-paths.js",
		"package": "npm run build:react && electron-forge package",
		"make": "npm run build:react && electron-forge make",
		"publish": "electron-forge publish",
		"clean": "rimraf out dist client/build",
		"lint": "echo \"No linting configured\"",
		"test": "jest --coverage",
		"test:watch": "jest --watch",
		"postinstall": "npx electron-rebuild -f -w keytar"
	},
	"homepage": "./",
	"keywords": [
		"twitch",
		"serato",
		"node",
		"bot",
		"javascript",
		"streaming-tools"
	],
	"author": "Marcus McBride",
	"license": "ISC",
	"dependencies": {
		"axios": "^1.4.0",
		"body-parser": "^1.20.2",
		"cheerio": "^1.0.0-rc.12",
		"concurrently": "^8.2.0",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"electron-squirrel-startup": "^1.0.1",
		"express": "^4.18.2",
		"keytar": "^7.9.0",
		"nedb": "^1.8.0",
		"nodemon": "^3.0.1",
		"obs-websocket-js": "^5.0.3",
		"react-scripts": "^5.0.1",
		"string-similarity-js": "^2.1.4",
		"tmi.js": "^1.8.5",
		"ws": "^8.16.0"
	},
	"engines": {
		"node": "18.x",
		"npm": "9.x"
	},
	"devDependencies": {
		"@electron-forge/cli": "^7.4.0",
		"@electron-forge/maker-deb": "^7.4.0",
		"@electron-forge/maker-dmg": "^7.8.0",
		"@electron-forge/maker-rpm": "^7.4.0",
		"@electron-forge/maker-squirrel": "^7.4.0",
		"@electron-forge/maker-zip": "^7.4.0",
		"@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
		"@electron-forge/plugin-fuses": "^7.4.0",
		"@electron/fuses": "^1.8.0",
		"@types/jest": "^29.5.12",
		"axios-mock-adapter": "^2.1.0",
		"electron": "^26.6.10",
		"electron-is-dev": "^2.0.0",
		"electron-notarize": "^1.2.2",
		"electron-osx-sign": "^0.6.0",
		"jest": "^29.7.0",
		"rimraf": "^6.0.1",
		"supertest": "^7.0.0"
	},
	"jest": {
		"testEnvironment": "node",
		"testMatch": [
			"**/__tests__/**/*.test.js",
			"**/?(*.)+(test).js"
		],
		"moduleFileExtensions": [
			"js",
			"json"
		],
		"setupFiles": [
			"<rootDir>/jest.setup.js"
		],
		"moduleNameMapper": {
			"^client/(.*)$": "<rootDir>/client/$1",
			"^auth/(.*)$": "<rootDir>/auth/$1",
			"^scripts/(.*)$": "<rootDir>/scripts/$1",
			"^database/(.*)$": "<rootDir>/database/$1"
		},
		"resetMocks": true,
		"clearMocks": true,
		"collectCoverageFrom": [
			"auth/**/*.js",
			"scripts/**/*.js",
			"!client/**"
		]
	}
}
